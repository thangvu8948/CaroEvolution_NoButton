<Window x:Class="CaroEvolution_NoButton.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CaroEvolution_NoButton"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded"
        MouseLeftButtonUp="Window_MouseLeftButtonUp">
    <Canvas Name="canvas" MouseLeftButtonUp="Canvas_MouseLeftButtonUp" MouseMove="Canvas_MouseMove">
        <Menu>
            <Button Content="New Game"  Click="NewGame_Click" Width="100" Height="30" FontSize="16"/>
            <Button Content="Save"  Click="Save_Click" Width="100" Height="30" FontSize="16"/>
            <Button Content="Load"  Click="Load_Click" Width="100" Height="30" FontSize="16"/>
        </Menu>
    </Canvas>
</Window>
